{
  "name": "Question",
  "base": "PersistedModel",
  "strict": true,
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "mixins": {
    "TimeStamp": {
      "createdAt": "created",
      "updatedAt": "modified",
      "required": false
    }
  },
  "hidden": [
    "isVerified",
    "isHidden"
  ],
  "properties": {
    "shortId": {
      "type": "String",
      "required": true,
      "index": {"unique": true}
    },
    "slug": {
      "type": "String",
      "required": true,
      "index": {"unique": true}
    },
    "body": {
      "type": "String",
      "required": true
    },
    "isHidden": {
      "type": "Boolean",
      "required": true,
      "default": false
    },
    "isPublic": {
      "type": "Boolean",
      "required": true,
      "default": true
    },
    "isVerified": {
      "type": "Boolean",
      "required": true,
      "default": true
    },
    "viewsCount": {
      "type": "Number",
      "required": true,
      "default": 0
    },
    "title": {
      "type": "String",
      "required": true
    },
    "answersCount": {
      "type": "Number",
      "required": true,
      "default": 0
    },
    "votesCount": {
      "type": "Number",
      "required": true,
      "default": 0
    }
  },
  "validations": [],
  "relations": {
    "category": {
      "type": "embedsOne",
      "model": "Category",
      "property": "categoryItem",
      "required": true,
      "options": {
        "persistent": true,
        "validate": true
      }
    },
    "bestAnswer": {
      "type": "embedsOne",
      "model": "Answer",
      "property": "bestAnswer",
      "options": {
        "persistent": true,
        "validate": true
      }
    },
    "tags": {
      "type": "embedsMany",
      "model": "SubCategory",
      "property": "tags",
      "options": {
        "persistent": true,
        "validate": true
      }
    },
    "askedBy": {
      "model": "user",
      "type": "belongsTo",
      "foreignKey": "ownerId",
      "required": true
    },
    "answers": {
      "type": "hasMany",
      "model": "Answer",
      "foreignKey": "questionId",
      "primaryKey": "id"
    },
    "votes": {
      "type": "hasMany",
      "model": "Vote",
      "polymorphic": {
        "foreignKey": "modelId",
        "discriminator": "modelType"
      }
    },
    "expecters": {
      "type": "embedsMany",
      "model": "user",
      "property": "expecters",
      "options": {
        "persistent": true,
        "validate": true
      }
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": [
        "create"
      ]
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    }
  ],
  "methods": {}
}
