{
  "name": "Question",
  "base": "PersistedModel",
  "strict": true,
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "mixins": {
    "TimeStamp": {
      "createdAt": "created",
      "updatedAt": "modified",
      "required": false
    }
  },
  "hidden": [
    "isVerified",
    "disabled"
  ],
  "properties": {
    "shortId": {
      "type": "String",
      "required": true,
      "index": {"unique": true}
    },
    "slug": {
      "type": "String",
      "required": true,
      "index": {"unique": true}
    },
    "body": {
      "type": "String",
      "required": true
    },
    "disabled": {
      "type": "Boolean",
      "required": true,
      "default": false
    },
    "isPublic": {
      "type": "Boolean",
      "required": true,
      "default": true
    },
    "isVerified": {
      "type": "Boolean",
      "required": true,
      "default": true
    },
    "viewCount": {
      "type": "Number",
      "required": true,
      "default": 0
    },
    "title": {
      "type": "String",
      "required": true
    },
    "answerCount": {
      "type": "Number",
      "required": true,
      "default": 0
    },
    "upVoteCount": {
      "type": "Number",
      "required": true,
      "default": 0
    },
    "downVoteCount": {
      "type": "Number",
      "required": true,
      "default": 0
    },
    "reportCount": {
      "type": "Number",
      "required": true,
      "default": 0
    }
  },
  "validations": [],
  "relations": {
    "category": {
      "type": "embedsOne",
      "model": "Category",
      "property": "categoryItem",
      "required": true,
      "options": {
        "persistent": true,
        "validate": true
      }
    },
    "bestAnswer": {
      "type": "embedsOne",
      "model": "Answer",
      "property": "bestAnswerItem",
      "options": {
        "persistent": true,
        "validate": true
      }
    },
    "tags": {
      "type": "embedsMany",
      "model": "Tag",
      "property": "tagList",
      "options": {
        "persistent": true,
        "validate": true
      }
    },
    "askedBy": {
      "model": "user",
      "type": "belongsTo",
      "foreignKey": "ownerId",
      "required": true
    },
    "answers": {
      "type": "hasMany",
      "model": "Answer",
      "foreignKey": "questionId",
      "primaryKey": "id"
    },
    "votes": {
      "type": "hasMany",
      "model": "Vote",
      "polymorphic": "model"
    },
    "reports": {
      "type": "hasMany",
      "model": "Report",
      "polymorphic": "model"
    },
    "remove": {
      "type": "embedsOne",
      "model": "Remove",
      "property": "removedItem",
      "options": {
        "validate": true
      }
    },
    "supporters": {
      "type": "embedsMany",
      "model": "user",
      "property": "supporterList",
      "options": {
        "persistent": true,
        "validate": true
      }
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "ALLOW"
    },
    {
      "principalType": "ROLE",
      "principalId": "user",
      "accessType": "*",
      "permission": "ALLOW",
      "property": [
        "createOrUpdate",
        "voteRoute",
        "approveAnswerRoute"
      ]
    },
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "admin",
      "permission": "ALLOW"
    }
  ],
  "methods": {}
}
