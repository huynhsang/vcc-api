{
  "name": "user",
  "base": "User",
  "idInjection": true,
  "strict": true,
  "options": {
    "validateUpsert": true
  },
  "mixins": {
    "TimeStamp": {
      "createdAt": "created",
      "updatedAt": "modified",
      "required": false
    }
  },
  "hidden": [
    "password",
    "emailVerified",
    "verificationToken",
    "realm",
    "isEnable",
    "handlingPointJob"
  ],
  "secured": [
    "id",
    "avatar",
    "username",
    "firstName",
    "lastName",
    "questionCount",
    "answerCount",
    "bestAnswers",
    "points",
    "badgeItem"
  ],
  "properties": {
    "username": {
      "type": "string",
      "index": {
        "unique": true
      }
    },
    "dateOfBirth": {
      "type": "Date",
      "required": false
    },
    "email": {
      "type": "String",
      "required": true,
      "index": {
        "unique": true
      }
    },
    "firstName": {
      "type": "String",
      "required": true
    },
    "headline": {
      "type": "String",
      "required": false
    },
    "isEnable": {
      "type": "Boolean",
      "required": true,
      "default": true
    },
    "lastName": {
      "type": "String",
      "required": true
    },
    "nationality": {
      "type": "String",
      "required": false
    },
    "password": {
      "type": "String",
      "required": true,
      "length": 60
    },
    "summary": {
      "type": "String",
      "required": false,
      "length": 512
    },
    "questionCount": {
      "type": "Number",
      "required": true,
      "default": 0
    },
    "answerCount": {
      "type": "Number",
      "required": true,
      "default": 0
    },
    "bestAnswers": {
      "type": "Number",
      "required": true,
      "default": 0
    },
    "points": {
      "type": "Number",
      "required": true,
      "default": 0
    },
    "handlingPointJob": {
      "type": "Boolean",
      "default": 0
    },
    "pointsUpdateOn": {
      "type": "Date"
    },
    "avatarIndex": {
      "type": "Number",
      "default": 0
    }
  },
  "validations": [],
  "relations": {
    "roles": {
      "type": "hasMany",
      "model": "Role",
      "foreignKey": "principalId",
      "through": "RoleMapping"
    },
    "avatar": {
      "type": "embedsOne",
      "model": "Image",
      "property": "avatarImage",
      "options": {
        "persistent": true,
        "validate": true,
        "forceId": false
      }
    },
    "badge": {
      "type": "embedsOne",
      "model": "Badge",
      "property": "badgeItem"
    },
    "questions": {
      "type": "hasMany",
      "model": "Question",
      "foreignKey": "ownerId",
      "primaryKey": "id"
    },
    "answers": {
      "type": "hasMany",
      "model": "Answer",
      "foreignKey": "ownerId",
      "primaryKey": "id"
    },
    "educations": {
      "type": "hasMany",
      "model": "Education",
      "foreignKey": "ownerId",
      "primaryKey": "id"
    },
    "experiences": {
      "type": "hasMany",
      "model": "Experience",
      "foreignKey": "ownerId",
      "primaryKey": "id"
    },
    "wallet": {
      "type": "hasOne",
      "model": "Wallet",
      "foreignKey": "ownerId",
      "primaryKey": "id"
    },
    "notifications": {
      "type": "hasMany",
      "model": "Notification",
      "foreignKey": "ownerId",
      "primaryKey": "id"
    },
    "votes": {
      "type": "hasMany",
      "model": "Vote",
      "foreignKey": "ownerId",
      "primaryKey": "id"
    }
  },
  "acls": [
    {
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "permission": "ALLOW",
      "property": [
        "_UpdateProfile"
      ]
    },
    {
      "principalType": "ROLE",
      "principalId": "$owner",
      "permission": "DENY",
      "property": "deleteById"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW",
      "property": [
        "_GetProfileById",
        "_Register",
        "_GetMyAccount",
        "_VerifyEmail"
      ]
    },
    {
      "accessType": "READ",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "ALLOW"
    },
    {
      "principalType": "ROLE",
      "principalId": "admin",
      "accessType": "*",
      "permission": "ALLOW"
    }
  ],
  "methods": {}
}
