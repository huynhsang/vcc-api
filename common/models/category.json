{
  "name": "Category",
  "base": "PersistedModel",
  "strict": true,
  "idInjection": true,
  "options": {
    "validateUpsert": true
  },
  "mixins": {
    "TimeStamp": {
      "createdAt": "createdOn",
      "updatedAt": "updatedOn",
      "required": false
    }
  },
  "hidden": [],
  "properties": {
    "slug": {
      "type": "String",
      "required": true,
      "index": {"unique": true}
    },
    "nameEn": {
      "type": "String",
      "required": true
    },
    "nameVi": {
      "type": "String",
      "required": true
    },
    "questionsCount": {
      "type": "Number",
      "required": true,
      "default": 0
    }
  },
  "validations": [],
  "relations": {
    "subCategories": {
      "type": "hasMany",
      "model": "SubCategory",
      "foreignKey": "categorySlug",
      "primaryKey": "slug"
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "accessType": "READ",
      "permission": "ALLOW"
    },
    {
      "principalType": "ROLE",
      "principalId": "admin",
      "accessType": "WRITE",
      "permission": "ALLOW"
    },
    {
      "principalType": "ROLE",
      "principalId": "admin",
      "accessType": "EXECUTE",
      "permission": "ALLOW"
    }
  ],
  "methods": {}
}
