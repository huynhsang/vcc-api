{
  "name": "Answer",
  "base": "PersistedModel",
  "idInjection": true,
  "strict": true,
  "options": {
    "validateUpsert": true
  },
  "mixins": {
    "TimeStamp": {
      "createdAt": "created",
      "updatedAt": "modified",
      "required": false
    }
  },
  "hidden": [
    "disabled"
  ],
  "properties": {
    "shortId": {
      "type": "string",
      "required": true,
      "index": {"unique": true}
    },
    "body": {
      "type": "String",
      "required": true
    },
    "description": {
      "type": "String",
      "required": true
    },
    "isTheBest": {
      "type": "Boolean",
      "required": true,
      "default": false
    },
    "upVoteCount": {
      "type": "Number",
      "required": true,
      "default": 0
    },
    "downVoteCount": {
      "type": "Number",
      "required": true,
      "default": 0
    },
    "reportCount": {
      "type": "Number",
      "required": true,
      "default": 0
    },
    "disabled": {
      "type": "Boolean",
      "required": true,
      "default": false
    }
  },
  "validations": [],
  "relations": {
    "answerBy": {
      "model": "user",
      "type": "belongsTo",
      "foreignKey": "ownerId"
    },
    "question": {
      "model": "Question",
      "type": "belongsTo",
      "foreignKey": "questionId"
    },
    "votes": {
      "type": "hasMany",
      "model": "Vote",
      "polymorphic": {
        "foreignKey": "modelId",
        "discriminator": "modelType"
      }
    },
    "reports": {
      "type": "hasMany",
      "model": "Report",
      "polymorphic": {
        "foreignKey": "modelId",
        "discriminator": "modelType"
      }
    }
  },
  "acls": [
    {
      "accessType": "*",
      "principalType": "ROLE",
      "principalId": "$everyone",
      "permission": "DENY"
    },
    {
      "principalType": "ROLE",
      "principalId": "$everyone",
      "accessType": "READ",
      "permission": "ALLOW"
    },
    {
      "principalType": "ROLE",
      "principalId": "$owner",
      "accessType": "WRITE",
      "permission": "ALLOW"
    },
    {
      "principalType": "ROLE",
      "principalId": "user",
      "accessType": "*",
      "permission": "ALLOW",
      "property": [
        "_Upsert",
        "_Vote"
      ]
    },
    {
      "principalType": "ROLE",
      "principalId": "admin",
      "accessType": "*",
      "permission": "ALLOW"
    }
  ],
  "methods": {}
}
