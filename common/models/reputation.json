{
  "name": "Reputation",
  "base": "PersistedModel",
  "strict": true,
  "idInjection": true,
  "options": {
    "validateUpsert": true,
    "indexes": {
      "uqReputation": {
        "keys": {
          "modelId": 1,
          "modelType": 1,
          "giverId": 1,
          "type": 1
        },
        "options": {
          "unique": true
        }
      }
    }
  },
  "mixins": {
    "TimeStamp": {
      "createdAt": "created",
      "updatedAt": "modified",
      "required": false
    }
  },
  "hidden": [],
  "properties": {
    "type": {
      "type": "String",
      "required": true
    },
    "point": {
      "type": "Number",
      "required": true
    }
  },
  "validations": [],
  "relations": {
    "giver": {
      "model": "user",
      "type": "belongsTo",
      "foreignKey": "giverId"
    },
    "receiver": {
      "model": "user",
      "type": "belongsTo",
      "foreignKey": "receiverId"
    },
    "model": {
      "type": "belongsTo",
      "polymorphic": {
        "foreignKey": "modelId",
        "discriminator": "modelType"
      }
    }
  },
  "acls": [
    {
      "principalType": "ROLE",
      "principalId": "$owner",
      "accessType": "WRITE",
      "permission": "ALLOW"
    },
    {
      "principalType": "ROLE",
      "principalId": "$owner",
      "accessType": "EXECUTE",
      "permission": "ALLOW"
    },
    {
      "principalType": "ROLE",
      "principalId": "$authenticated",
      "accessType": "WRITE",
      "permission": "ALLOW",
      "property": ["create"]
    }
  ],
  "methods": {}
}
